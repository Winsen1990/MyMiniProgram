/* pages/category/index.wxss */
page {
  background-color: #fafafa;
  height: 100%;
}

/* 搜索框 */
.search {
  background: #ffffff;
  padding: 20rpx 28rpx;
}
.search .search-form {
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  background-color: #f2f2f2;
  padding: 8rpx 20rpx;
}
.search .search-form .icon-search {
  padding: 0 16rpx;
  color: #999999;
  font-size: 28rpx;
}
.search .search-form .hd-input-text {
  flex-grow: 1;
  border-bottom-right-radius: 10rpx;
  border-top-right-radius: 10rpx;
  font-size: 28rpx;
  background-color: #f2f2f2;
}
.search .search-form .hd-input-text input {
  width: 100%;
  text-align: center;
  text-indent: -28rpx;
  background-color: #f2f2f2;
  font-size: 28rpx;
}

/* 分类列表 */
.category-panel {
  display: flex;
  width: 100%;
  height: 100%;
}

.category-panel .category-list {
  text-align: center;
  background-color: #F3F3F3;
  /* border-right: 2rpx solid #e5e5e5; */
  display: inline-block;
  height: 100%;
  width: 194rpx;
  vertical-align: top;
}

.category-panel .category-list .category-item {
  color: #333333;
  font-size: 28rpx;
  /* line-height: 1.6rem; */
  text-align: center;
  display: block;
  padding: 28rpx 0;
}

.category-panel .category-list .category-item-current {
  color: #333333;
  background-color: #ffffff;
  border-left: 8rpx solid #FFC426;
}

.category-panel .category-product-list {
  display: inline-block;
  width: 520rpx;
  padding: 0 40rpx 40rpx;
  background-color: #ffffff;
}

.category-panel .category-product-list .sub-category {
  color: #565656;
  font-size: 28rpx;
  line-height: 2;
  padding-left: 5%;
  display: block;
  margin-top: 40rpx;
  border-left: 6rpx solid #ffbb1d;
  background-color: rbga(114, 114, 114, 0.1);
}

.category-product-item {
  display: flex;
  width: 460rpx;
  margin: 40rpx auto 0;
  padding: 30rpx 20rpx;
  align-items: center;
  position: relative;
  border: 2rpx solid rgba(112,112,112,0.1);
}

.category-product-item .product-image {
  width: 190rpx;
  height: 190rpx;
  display: inline-block;
  vertical-align: middle;
}

.category-product-item .product-info {
  display: inline-block;
  margin-left: 10rpx;
  width: 300rpx;
  vertical-align: middle;
}

.category-product-item .product-name {
  display: block;
  color: #333333;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  line-height: 1;
  text-align: left;
  margin: 30rpx auto 12rpx;
  font-weight: bold;
}

.category-product-item .product-desc {
  display: block;
  max-height: 64rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
  font-size: 20rpx;
  color: #b6b6b5;
  margin: 0 auto 16rpx;
  line-height: 1.2;
  font-weight: normal;
}

.wx-swiper-dots {
  display: none;
}

.category-product-item .product-price {
}

.category-product-item .price {
}

.category-product-item .market-price {
}

.category-add-to-cart {
  background-color: #b80333;
  color: #ffffff;
  position: absolute;
  font-size: 36rpx;
  line-height: 50rpx;
  right: 30rpx;
  bottom: 30rpx;
  display: block;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  border-radius: 50%;
}

.tabbar {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  width: 750rpx;
}

.tabbar .tabbar-item {
  flex-grow: 1;
  text-align: center;
  padding: 12rpx 0 8rpx;
}

.tabbar .tabbar-item image {
  width: 46rpx;
  height: 46rpx;
  margin: 0 auto;
  display: inline-block;
}

.tabbar .tabbar-item text {
  font-size: 20rpx;
  display: block;
  text-align: center;
  line-height: 1;
}