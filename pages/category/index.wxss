/* pages/category/index.wxss */
page {
  background-color: #fafafa;
  height: 100%;
}

.category-panel {
  display: flex;
  width: 100%;
  height: 100%;
}

.category-panel .category-list {
  text-align: center;
  background-color: #F3F3F3;
  border-right: 2rpx solid #e5e5e5;
  display: inline-block;
  height: 100%;
  width: 192rpx;
  vertical-align: top;
}

.category-panel .category-list .category-item {
  color: #333333;
  font-size: .8rem;
  /* line-height: 1.6rem; */
  text-align: center;
  display: block;
  padding: 30rpx 0;
}

.category-panel .category-list .category-item-current {
  color: #333333;
  background-color: #ffffff;
  border-left: 8rpx solid #FFC426;
}

.category-panel .category-product-list {
  display: inline-block;
  width: 520rpx;
  padding: 40rpx;
}

.category-panel .category-product-list .sub-category {
  color: #565656;
  font-size: 27rpx;
  line-height: 2.2rem;
  padding-left: 5%;
  display: block;
  margin-top: 40rpx;
  background-color: #ffffff;
}

.category-product-item {
  display: flex;
  width: 460rpx;
  margin: 40rpx auto 0;
  padding: 30rpx 20rpx;
  align-items: center;
  position: relative;
  border: 2rpx solid rgba(112,112,112,0.1);
}

.category-product-item .product-image {
  width: 190rpx;
  height: 190rpx;
  display: inline-block;
  vertical-align: middle;
}

.category-product-item .product-info {
  display: inline-block;
  margin-left: 10rpx;
  width: 300rpx;
  vertical-align: middle;
}

.category-product-item .product-name {
  display: block;
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.category-product-item .product-desc {
  font-size: 20rpx;
  color: #565656;
  max-height: 60rpx;
}

.wx-swiper-dots {
  display: none;
}

.category-product-item .price {
  color: #E9577C;
  font-size: 36rpx;
  line-height: 44rpx;
}

.category-product-item .market-price {
  color: #999999;
  font-size: 24rpx;
  line-height: 44rpx;
  margin-left: 16rpx;
  text-decoration: line-through;
}

.category-add-to-cart {
  background-color: #E9577C;
  color: #ffffff;
  position: absolute;
  font-size: 36rpx;
  line-height: 50rpx;
  right: 30rpx;
  bottom: 30rpx;
  display: block;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  border-radius: 50%;
}