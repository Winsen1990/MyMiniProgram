/* pages/address/add.wxss */
.form {

}

.form .form-row {
  display: flex;
  padding: 30rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.form .form-row label {
  color: #a3a3a3;
  width: 200rpx;
}

.form .form-row .form-input {
  flex-grow: 1;
  display: flex;
  align-items: center;
}

.form .form-row .form-input input {
  width: 100%;
}

.form .form-row .form-input picker {
}

.form .form-row .form-input .region-location {
  display: auto;
  text-align: right;
  flex-grow: 1;
  color: #C7162B;
  align-items: center;
  margin-left: 20rpx;
  vertical-align: middle;
}

.form .form-row .form-input .region-location icon {
  font-size: 50rpx;
  margin-right: 10rpx;
  margin-top: -6rpx;
}

.form .form-row .form-input .region-location text {
  line-height: 50rpx;
}

.form .form-row .form-text-area {
  flex-grow: 1;
}

.form .form-row .form-text-area textarea {
  width: 100%;
}

.toolbar {
  display: block;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  border-top: 2rpx solid #e5e5e5;
  text-align: center;
  width: 100%;
}

.toolbar-btn {
  display: block;
  background-color: #C7162B;
  color: #ffffff;
  text-align: center;
  width: 90%;
  margin: 10rpx auto;
  border-radius: 15rpx;
}

.toolbar-btn icon {
  font-size: 36rpx;
}

.toolbar-btn text {
  line-height: auto;
}