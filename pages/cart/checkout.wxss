/* pages/cart/checkout.wxss */
page {
  background-color: #f2f2f2;
}

/* 地址信息 */

.address {
  background-color: #fff;
  color: #565656;
}

.address .address-decoration {
  height: 6rpx;
  background: url('http://m.hdjshop.cn/themes/hdj/images/colourBar.png') repeat-x;
  background-size: contain;
}

.address navigator {
  font-size: 32rpx;
}

.address .icon-plus {
  padding: 20rpx 10rpx;
  background-color: #a2002d;
  border-radius: 15rpx;
  color: #fff;
  margin-right: 20rpx;
  font-weight: bold;
  font-size: 48rpx;
}

.address .icon-plus::before {
  margin-left: 10rpx;
}

.address .address-meta {
  border-bottom: 2rpx solid #dddddd;
  padding: 24rpx 28rpx;
  font-size: 28rpx;
}

.address .icon-address {
  font-size: 32rpx;
  margin-right: 10rpx;
  color: #999999;
}

.address .address-info {
}

.address .address-consignee {
  display: flex;
  margin: 0 30rpx 20rpx 0;
}

.address .address-consignee .address-mobile {
  flex-grow: 1;
  text-align: right;
}

/* 商户信息 */

.shop {
  border-top: 2rpx solid #e5e5e5;
  border-bottom: 2rpx solid #e5e5e5;
  margin-top: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  font-size: 32rpx;
}

.shop .shop-info {
  vertical-align: middle;
  padding: 30rpx;
}

.shop .shop-info icon {
  margin-right: 10rpx;
  vertical-align: middle;
  margin-top: -6rpx;
  font-size: 50rpx;
}

.shop .shop-info text {
  vertical-align: middle;
}

.shop .shop-products {
  background-color: #fafafa;
}

.shop .shop-products .shop-product {
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #e5e5e5;
  display: flex;
}

.shop .shop-products .shop-product:last-child {
  border-bottom: 0;
}

.shop .shop-products .shop-product .shop-product-img {
  width: 180rpx;
  min-width: 180rpx;
  margin-right: 20rpx;
}

.shop .shop-products .shop-product .shop-product-info {
  /* display: flex; */
  flex-grow: 1;
}

.shop .shop-products .shop-product .shop-product-name {
  /* flex-grow: 1; */
  /* width: 310rpx; */
}

.shop .shop-products .shop-product .shop-product-name .name {
  display: block;
  /* margin-bottom: 30rpx; */
}

.shop .shop-products .shop-product .gift-tag {
  color: #a2002d;
  font-size: 28rpx;
  line-height: 32rpx;
  border-radius: 8rpx;
  border: 2rpx solid #a2002d;
  padding: 0 8rpx;
}

.shop .shop-products .shop-product .shop-product-amount {
  /* margin-left: 20rpx; */
  /* text-align: right; */
  /* flex-grow: 1; */
}

.shop .shop-products .shop-product .shop-product-amount .shop-product-price {
  /* display: block; */
  /* margin-bottom: 60rpx; */
  /* white-space: nowrap; *//* overflow: hidden; */
  margin-right: 10rpx;
}

.shop .shop-products .shop-product .shop-product-amount .shop-product-count {
  /* display: block; */
}

/* 配送信息 */

.shop-meta {
  margin-left: 30rpx;
  padding: 30rpx;
  padding-left: 0;
  border-bottom: 2rpx solid #e5e5e5;
  position: relative;
}

.shop-meta:last-child {
  border-bottom: 0;
}

.shop-meta .shop-meta-tail {
  position: absolute;
  right: 30rpx;
  color: #a3a3a3;
  top: 50%;
  transform: translateY(-50%);
}

.shop-meta .shop-meta-tail.font-red {
  color: #a2002d;
}

.shop-meta .shop-remark-input {
  width: 590rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 30rpx;
}

.shop-meta .shop-remark-input input {
  width: 100%;
}

/* 优惠券 */

.coupon {
  background-color: #fff;
  border-bottom: 0;
  display: flex;
}

.coupon picker {
  flex-grow: 1;
}

.coupon picker .meta-tail {
  display: block;
  position: relative;
  text-align: right;
}

/* 钱包 */
.wallet {
  font-size: 32rpx;
  color: #333333;
  background-color: #ffffff;
}

.wallet text + text {
  margin-left: 30rpx;
}

.wallet::after {
  display: none;
}

.wallet .meta-tail {
  right: 30rpx;
}

.wallet .checkbox {
  font-size: 40rpx;
}

/* 短信通知收件人 */

.notice {
  background-color: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
  position: relative;
}

.notice switch {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 合计 */

.summary {
  background-color: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}

.summary .summary-row {
  margin-bottom: 20rpx;
  display: flex;
}

.summary .summary-row:last-child {
  margin-bottom: 0;
}

.summary .summary-row .label {
  flex-grow: 1;
}

.summary .summary-row .value {
  color: #a3a3a3;
}

/* 提交订单 */

.toolbar-block {
  height: 102rpx;
}

.toolbar {
  height: 100rpx;
  border-top: 2rpx solid #e5e5e5;
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  align-items: center;
  background-color: #fff;
  box-shadow: -10rpx 0 10rpx #cfcfcf;
}

.toolbar .blank-block {
  flex-grow: 1;
}

.toolbar .toolbar-summary {
  margin-right: 20rpx;
}

.toolbar .toolbar-submit-btn {
  background-color: #a2002d;
  color: #fff;
  padding: 28rpx 80rpx;
  border-left: 2rpx solid #e5e5e5;
  position: relative;
}

.toolbar .toolbar-submit-btn[disabled] {
  background-color: #fafafa;
  color: #a3a3a3;
}

.checkbox[checked] {
  color: #a2002d;
}