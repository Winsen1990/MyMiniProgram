/* pages/cart/index.wxss */
@import "../../assets/icon/iconfont.wxss";
/* 购物车列表 */
page {
  background-color: #f5f5f5;
}

.cart {
  margin-bottom: 5rem;
}

.cart-item {
  border-bottom: 1px solid #d0d0d0;
  padding: .5rem;
  display: flex;
  align-items: center;
  background-color: #ffffff;
}

.cart-item image {
  width: 5rem;
  height: 5rem;
  padding: 0 .3rem;
}

.cart-item .cart-item-info {
  flex-grow: 1;
}

.cart-item .cart-item-info .cart-item-name {
  height: 2rem;
  font-size: .8rem;
  color: #656565;
  display: block;
  margin-bottom: 1.2rem;
}

.cart-item .cart-item-info .cart-item-toolkit {
  display: flex;
  align-items: center;
}

.cart-item .cart-item-info .cart-item-price {
  color: #870020;
  flex-grow: 1;
}

.cart-item .cart-item-info .cart-item-opera {
  display: inline-flex;
}

button::after {
  border: none;
}

input {
  outline: none;
  border: none;
  list-style: none;
}

.cart-item .cart-item-info .cart-item-opera .btn-minus, .cart-item .cart-item-info .cart-item-opera .btn-plus, .cart-item .cart-item-info .cart-item-opera .cart-item-number {
  display: inline-block;
  color: #333333;
  background-color: #ffffff;
  border: 1px solid #d0d0d0;
  font-size: 1rem;
  text-align: center;
  vertical-align: middle;
  padding: 0 .3rem;
}

.cart-item .cart-item-info .cart-item-opera .cart-item-number {
  width: 2.5rem;
  overflow: hidden;
}

.cart-item .cart-item-info .cart-item-opera .cart-item-number input {
  -webkit-appearance: none;
  height: 100%;
  display: block;
  min-height: auto;
  max-height: auto;
  padding: 0;
  float: left;
}

.cart-item .cart-item-info .cart-item-opera .btn-minus {
  border-right: 0;
  border-radius: 5px 0 0 5px;
}

.cart-item .cart-item-info .cart-item-opera .btn-plus {
  border-left: 0;
  border-radius: 0 5px 5px 0;
}

.cart-item .cart-item-info .cart-item-opera button.disabled {
  color: #656565;
}

.cart-item:last-child {
  border-bottom: 0;
}

.cart-toolbar {
  position: fixed;
  display: flex;
  bottom: 0;
  width: 100%;
  background-color: #ffffff;
  border-top: 1px solid #d0d0d0;
  justify-content: center;
  align-items: center;
}

.cart-toolbar .block-empty {
  flex-grow: 1;
  display: inline-flex;
}

.cart-toolbar label {
  padding-left: .5rem;
}

.cart-toolbar .cart-summary {
  padding: .3rem;
  font-size: 1rem;
  text-align: right;
}

.cart-toolbar .cart-summary .cart-summary-amount {
  color: #870020;
}

.cart-toolbar .cart-summary .cart-notice {
  font-size: .8rem;
  line-height: 1rem;
  color: #d0d0d0;
}

.cart-toolbar .btn-checkout {
  background-color: #870020;
  color: #ffffff;
  border-radius: 0;
  text-align: center;
  display: inline-flex;
  width: auto;
  height: 100%;
  padding: .8rem 1rem;
}

/* 购物车空 */
.cart-empty {
  display: block;
  text-align: center;
  color: #656565;
  margin-top: 20%;
}

.cart-empty icon {
  font-size: 6rem;
  color: #d0d0d0;
}

.cart-empty text {
  display: block;
  line-height: 1.4rem;
  font-size: .8rem;
  color: #d0d0d0;
}

.cart-empty text.last-line {
  margin-bottom: 1rem;
}

.btn {
  display:inline-block;
  padding:.5rem 1rem;
  font-size:1rem;
  width:50%;
  border-radius:5px;
}

.btn-primary {
  background-color: #870020;
  color: #ffffff;
}