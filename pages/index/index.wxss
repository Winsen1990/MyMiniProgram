/**index.wxss**/
page {
  background-color: #f1f1f1;
}

/* 搜索框 */
.search {
  background: #ffffff;
  padding: 20rpx 28rpx;
}
.search .search-form {
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  background-color: #f2f2f2;
  padding: 8rpx 20rpx;
}
.search .search-form .icon-search {
  padding: 0 16rpx;
  color: #999999;
  font-size: 28rpx;
}
.search .search-form .hd-input-text {
  flex-grow: 1;
  border-bottom-right-radius: 10rpx;
  border-top-right-radius: 10rpx;
  font-size: 28rpx;
  background-color: #f2f2f2;
}
.search .search-form .hd-input-text input {
  width: 100%;
  text-align: center;
  text-indent: -28rpx;
  background-color: #f2f2f2;
  font-size: 28rpx;
}

/* 功能区 */
.index-functions {
  padding: 40rpx;
  display: flex;
  align-items: center;
}

.index-functions-middle {
  padding-top: 0;
}

.index-functions .index-function-item {
  flex-grow: 1;
  text-align: center;
}

.index-functions .index-function-item image {
  width: 103rpx;
  height: 103rpx;
  display: block;
  margin: 0 auto 20rpx;
}

.index-functions .index-function-item text {
  display: block;
  font-size: 24rpx;
}

/* 平铺广告 */
.index-ad {
  width: 750rpx;
  margin-bottom: 56rpx;
}