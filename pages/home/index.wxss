/* pages/home/index.wxss */
/* 用户信息 */
.user-info {
  padding: 80rpx 0 40rpx;
  text-align: center;
  background-color: #ffffff;
}

.user-info .avatar {
  width: 200rpx;
  height: 200rpx;
  border: 4rpx solid #ffffff;
  box-shadow: 0 0 14rpx #858585;
  border-radius: 50%;
}

.user-info .nickname {
  display: block;
  margin: 20rpx auto;
}

.user-info .login-btn {
  background-color: #E9577C;
  color: #ffffff;
  padding: 0rpx 40rpx;
  width: 300rpx;
  font-size: 28rpx;
  margin: 20rpx auto 0;
  border-radius: 15rpx;
}

/* 大功能 */
.block {
  background-color: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  padding-left: 30rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
  padding-bottom: 30rpx;
}

.block .block-title {
  color: #565656;
  margin-left: -30rpx;
}

.block .block-cubes {
  display: flex;
}

.block .block-cubes .block-cube {
  flex-grow: 1;
  color: #E9577C;
  text-align: center;
  width: 25%;
  padding: 30rpx 0;
}

.block .block-cubes .block-cube icon {
  display: block;
  font-size: 60rpx;
  margin-bottom: 30rpx;
}

.block .block-cubes .block-cube text {
}

/* 小功能 */
.single-block {
  border: 0;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  color: #565656;
}

/* 红酒库 */
.wine-block {
  padding-left: 0;
}

.wine-block .block-title {
  padding: 30rpx;
  margin-left: 0;
}

.wine-stock {
  display: flex;
  align-items: center;
  flex-flow: row wrap;
  padding: 0 0 0 30rpx;
}

.wine-stock .wine {
  margin-right: 30rpx;
  flex-grow: 1;
  width: 245rpx;
  padding: 30rpx 20rpx;
  background-color: #e8dfc5;
  text-align: center;
  border-radius: 15rpx;
}

.wine-stock .wine-grow {
  background-color: #E9577C;
}

.wine-stock .wine .wine-img {
  width: 100%;
  max-height: 190rpx;
}

.wine-stock .wine .wine-name {
  display: block;
  margin-top: 20rpx;
}

.wine-stock .wine .wine-quantity {
  display: block;
}

.wine-stock .wine-grow .wine-name {
  color: #ffffff;
}

.wine-stock .wine-grow .wine-quantity {
  color: #ffffff;
}