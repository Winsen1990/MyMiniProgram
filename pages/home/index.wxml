<!-- 推广二维码 -->
<view class="hdj-board {{ boardLoading ? 'skt-loading' : '' }}" wx:if="{{ showBoard }}">
  <text class="close iconfont icon-times" catchtap="closeBoard"></text>
  <view class="board">
    <image src="{{ qr_code }}" class="qr-code" mode="widthFix"/>
  </view>
  <view class="toolbar">
    <button class="save-btn" catchtap="saveQrCode">保存至相册</button>
  </view>
</view>

<painter customStyle='position: absolute; left: -9999rpx;' class="painter" palette="{{ boardDraw }}" bind:imgOK="qrCodeReady" />