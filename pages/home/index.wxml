<!--pages/home/index.wxml--> 
<!-- 用户信息 -->
<view class="hdj-member-info" wx:if="{{!hasUserInfo && canIUse}}">
    <button class="hdj-member-card-top" open-type="getUserInfo" bindgetuserinfo="getUserInfo">
        <view class="hdj-member-card">
            <view class="hdj-member-card-info">
                <image src="{{userInfo.avatar}}" background-size="cover" class="hdj-member-card-avatar"/>
                <view class="hdj-member-name-meta">
                    <view class="hdj-member-nickname">{{userInfo.nickname}}</view>
                </view>
            </view>
            <view class="hdj-member-card-notice"></view>
            <image src="/assets/images/vip_tag.png" class="hdj-member-vip-mark"/>
        </view>
    </button>
    <view class="hdj-member-card-bottom">
        畅享会员特权
    </view>
</view>

<view class="hdj-member-info" wx:else>
    <view class="hdj-member-card">
      <image src="{{userInfo.avatar}}"  background-size="cover" class="hdj-member-card-avatar"/>
      <view class="hdj-member-name-meta">
          <view class="hdj-member-nickname">{{userInfo.nickname}}</view>
          <view class="hdj-member-desc">
              <view class="hdj-member-level-name">
                  <icon class="iconfont icon-vip"></icon>
                  {{userInfo.level_name}}
              </view>

              <navigator url="/pages/home/member" class="hdj-member-level-expired" wx:if="{{userInfo.level_expired != '长期'}}">
              {{userInfo.level_expired}}
              </navigator>
              
              <block wx:if="{{userInfo.level_id > 1}}">
              <navigator url="/pages/home/level?id={{userInfo.level_id}}" class="hdj-member-level-link">
                  <view class="hdj-member-level-privileges">
                    <block wx:for="{{userInfo.level_privileges}}" wx:key="id" wx:for-item="privilege">
                    <image src="{{privilege.icon}}" class="hdj-member-level-privilege"/>
                    </block>
                  </view>
                  <view>五项专属权益 ></view>
              </navigator>
              </block>

              <block wx:else>
              <navigator url="/pages/home/member" class="hdj-co-partner-link">
                <image src="http://www.hdjshop.cn/themes/hdj/images/gift-icon.png" mode="widthFix"/>
                <view>
                  <view>超级会员</view>
                  <view>购参开通 ></view>
                </view>
              </navigator>
              </block>
            </view>
      </view>
    </view>
</view>

<!-- 我的订单 -->
<view class="block">
  <navigator url="/pages/order/index" class="meta-with-arrow">
    <text class="block-title"> 我的订单</text>
    <text class="meta-tail">查看全部订单</text>
  </navigator>

  <view class="block-cubes">
    <navigator url="/pages/order/index?status=1" class="block-cube">
