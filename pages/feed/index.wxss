/* pages/feed/index.wxss */
.question-wrapper {
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 9;
  background: #fafafa;
}

.question {
  width: 720rpx;
  margin: 20rpx auto;
  display: block;
}

.feed-list {
  width: 720rpx;
  margin: 20rpx auto;
  text-align: center;
  /* padding-top: 262rpx; */
}

.feed {
  margin-bottom: 26rpx;
  box-shadow: 0 3rpx 3px #e5e5e5;
  text-align: left;
}

.feed-cover {
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  width: 100%;
}

.feed-info {
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  background-color: #ffffff;
  padding: 30rpx;
}

.feed-info .feed-title {
  font-size: 32rpx;
  color: #565656;
  display: block;
}

.feed-info .feed-desc {
  margin-top: 20rpx;
  color: #a3a3a3;
  display: block;
  font-size: 26rpx;
}

.feed-date {
  display: inline-block;
  margin: 40rpx auto 26rpx;
  font-size: 26rpx;
  border-radius: 15rpx;
  background-color: #a3a3a3;
  color: #ffffff;
  padding: 10rpx 15rpx;
}