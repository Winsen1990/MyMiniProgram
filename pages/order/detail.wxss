/* pages/order/detail.wxss */
@import '/assets/icon/iconfont.wxss';

/* 地址信息 */
.address {
  background-color: #fff;
  color: #565656;
}

.address .address-decoration {
  height: 6rpx;
  background: url('http://m.hdjshop.cn/themes/hdj/images/colourBar.png') repeat-x;
  background-size: contain;
}

.address view {
  font-size: 32rpx;
}

.address .icon-plus::before {
  margin-left: 10rpx;
}

.address .address-meta {
  border-bottom: 2rpx solid #dddddd;
  padding: 24rpx 28rpx;
  font-size: 28rpx;
}

.address .icon-address {
  font-size: 32rpx;
  margin-right: 10rpx;
  color: #999999;
}

.address .address-info {
}

.address .address-info.meta-with-arrow::after {
  display: none;
}

.address .address-consignee {
  display: flex;
  margin: 0 30rpx 20rpx 0;
}

.address .address-consignee .address-mobile {
  flex-grow: 1;
  text-align: right;
}

.order-status-block {
  background-color: #ffffff;
  display: block;
  font-size: 32rpx;
  padding: 16rpx 28rpx;
  color: #a2002d;
  border-bottom: 2rpx solid #dddddd;
  margin-bottom: 20rpx;
}

.order-status-block icon {
  display: inline;
}

.order {
  margin-top: 20rpx;
  background-color: #ffffff;
}

.shop-info {
  padding: 20rpx 30rpx;
}

.order-detail {
  background-color: #fafafa;
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.order-detail:last-child {
  border-bottom: 0;
}

.order-detail .detail-img {
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
}

.order-detail .detail-info {
  max-width: 40%;
}

.order-detail .detail-info text {
  display: block;
}

.order-detail .detail-info .detail-attributes {
  margin-top: 20rpx;
  color: #a3a3a3;
}

.order-detail .detail-amount {
  flex-grow: 1;
  text-align: right;
  min-width: 25%;
}

.order-detail .detail-amount text {
  display: block;
}

.order-detail .detail-count {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.order-detail .detail-serve {
  color: #a3a3a3;
  border: 2rpx solid #a3a3a3;
  border-radius: 15rpx;
  padding: 8rpx 16rpx;
  display: block;
  text-align: center;
}

.order-summary, .order-amount {
  padding: 20rpx 30rpx;
}

.order-summary {
  color: #a3a3a3;
}

.order-summary .order-row, .order-amount .order-row {
  display: flex;
}

.order-amount {
  border-top: 2rpx solid #e5e5e5;
}

.order-summary .value, .order-amount .value {
  flex-grow: 1;
  text-align: right;
}

.blank-block {
  height: 102rpx;
}

.toolbar {
  border-top: 2rpx solid #e5e5e5;
  padding: 20rpx 15rpx;
  text-align: right;
  position: fixed;
  bottom: 0;
  width: 720rpx;
  background-color: #ffffff;
  display: flex;
}

.toolbar .order-opera, .toolbar .order-opera-primary {
  color: #333333;
  border: 2rpx solid #333333;
  border-radius: 10rpx;
  padding: 16rpx 16rpx;
  margin-left: 20rpx;
  line-height: 1;
  flex-grow: 1;
  text-align: center;
}

.toolbar .order-opera-primary {
  background-color: #a2002d;
  border-color: #a2002d;
  margin-right: 30rpx;
  color: #ffffff;
}

.tags {
  margin-top: 20rpx;
}

.order-detail .detail-info .tags .gift-tag {
  display: inline-block;
  color: #a2002d;
  font-size: 28rpx;
  line-height: 32rpx;
  border-radius: 8rpx;
  border: 2rpx solid #a2002d;
  padding: 4rpx 8rpx;
}