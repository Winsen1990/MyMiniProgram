uni-swiper .uni-swiper-dot-active {
  background-color: #f0f0f0;
  width: 6rpx;
  height: 6rpx;
}

.fixed-action-nav {
  position: fixed;
  bottom: 0rpx;
  height: 100rpx;
  width: 750rpx;
  color: #333;
  font-size: 32rpx;
  line-height: 100rpx;
  background-color: #fff;
  align-content: center;
}

.fixed-action-btn {
  width: 180rpx;
  height: 100rpx;
  display: inline-block;
}

.fixed-action-btn:before {
  content: '';
  display: inline-block;
  position: absolute;
  background-color: #03031e;
  width: 280rpx;
  height: 100rpx;
  z-index: -1;
  transform: perspective(0.8em) rotateX(2deg);
  transform-origin: top right;
}

.fixed-action-text {
  width: 450rpx;
}

.fixed-action-nav .text1 {
  color: #ff1e54;
  font-size: 32rpx;
  line-height: 100rpx;
}

.fixed-action-nav .text2 {
  color: #ff1e54;
  font-size: 48rpx;
  font-weight: bold;
}

.fixed-action-btn .text3 {
  color: #ffeee2;
  font-size: 32rpx;
  line-height: 100rpx;
  padding-left: 12rpx;
  text-align: center;
}
